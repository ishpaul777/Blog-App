<div style='width: 50vw; margin: 2rem auto;'>
	<%= form_with model: @post, url: create_post_path, class: 'form-group'  do |form| %>
		<div>
		<%= form.label :title %>
		<%= form.text_field :title, class: 'form-control mb-4' %>
		</div>
		<div>
		<%= form.label :text %>
		<%= form.text_area :text,class: 'form-control', rows: "3" %>
		</div>
		<%= form.submit class: "btn btn-primary mt-3" %>
	<% end %>
</div>